{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.15.6",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "dev": "nodemon api/server.ts",
    "build": "tsc --build",
    "build:prod": "tsc --build --clean && tsc --build",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "docker:dev": "docker compose --env-file .env -f docker/docker-compose.yml up dev",
    "docker:prod": "docker compose --env-file .env -f docker/docker-compose.yml up prod",
    "docker:down": "docker compose --env-file .env -f docker/docker-compose.yml down",
    "docker:rebuild": "docker compose --env-file .env -f docker/docker-compose.yml build --no-cache",
    "docker:clean": "docker compose --env-file .env -f docker/docker-compose.yml down -v --remove-orphans",
    "db:start": "docker compose --env-file .env -f docker/docker-compose.yml up -d postgres",
    "db:stop": "docker compose --env-file .env -f docker/docker-compose.yml stop postgres"
  }
}
